@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Blog>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}

		<!-- Main container -->
		<div class="container">

			<!-- Featured blogpost -->
			<div class="row section">
				<div class="col-md-12">
					<a href="Blogpost.html" class="featured-link"><div class="featured-blog">
						<div class="image-box" style="background-image:url('images/u_product_roadmap_white-1.png')"></div>
						<h2>Product Update - Deploying Deploy 3.3</h2>
						<p>The end of 2019 is approaching and with this, also the last Product Update of the year. 
							Let’s have a look at what we’ve been working on and what you can expect in the near future.</p>
						<a href="Blogpost.html" class="btn btn-primary">Read more >></a>
					</div></a>
				</div>
			</div>

			<!-- Latest blog posts -->
			<div class="row section">
				<div class="col-md-12">
					<h3>Latest stories</h3>
				</div>
			</div>

			<!-- Blog Post Query goes here. -->
			
			
            @{
            	var selection = Umbraco.Content(Guid.Parse("7f18f557-273e-45e0-9f2e-8a8b9963ac01"))
                .ChildrenOfType("blogItem")
                .Where(x => x.IsVisible())
                .OrderByDescending(x => x.CreateDate);
            }
            <div class="row">
            	@foreach (var item in selection)
            	{
            	var thumbnail = item.Value<IPublishedContent>("thumbnailImage");
            		<div class="col-md-4">
					<a href="@item.Url()" class="featured-link"><div class="thumbnail-blog">
						<div class="thumbnail-img" style="background-image:url('@thumbnail.Url()')"></div>
						<h5>@item.Value("title")</h5>
					</div></a>
				</div>
            	}
            </div>

		</div>